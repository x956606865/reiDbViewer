# Read-only Postgres connection string
# e.g. postgres://user:pass@host:5432/dbname?sslmode=require
DATABASE_URL_RO=

# Query timeouts (milliseconds)
QUERY_TIMEOUT_DEFAULT_MS=5000
QUERY_TIMEOUT_MAX_MS=10000

# Max rows per query (server-side cap)
MAX_ROW_LIMIT=1000

# App DB for auth and user-managed configs (optional)
# e.g. postgres://app_user:pass@host:5432/appdb?sslmode=require
APP_DB_URL=

# 32-byte base64 key for encrypting sensitive fields (e.g., user DSNs)
# Example generate: `openssl rand -base64 32`
APP_ENCRYPTION_KEY=

# Default schema for the app database (used for initialization check/SQL preview)
APP_DB_SCHEMA=public
# Optional table prefix for app/auth tables created during initialization
APP_DB_TABLE_PREFIX=rdv_
