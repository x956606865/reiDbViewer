{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v2/tooling/cli/schema.json",
  "productName": "reiDbView Desktop",
  "version": "0.0.0",
  "identifier": "dev.reidbview.desktop",
  "build": {
    "beforeBuildCommand": "pnpm --filter @rei-db-view/desktop build:ui",
    "beforeDevCommand": "pnpm --filter @rei-db-view/desktop dev:ui",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "reiDbView Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 960,
        "minHeight": 600
      }
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:rdv_local.db"]
    }
  }
}
